<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:weightSum="100"
    android:baselineAligned="false"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/frame_profile"
            android:layout_width="match_parent"
            android:clickable="true"
            android:layout_height="100dp"
            >

            <TextView
                android:layout_width="179dp"
                android:layout_height="wrap_content"
                android:text="@string/profile_user_name"
                android:id="@+id/tv_fullname"
                android:layout_gravity="right|center_vertical"
                android:textSize="20dp"
                android:autoText="false"
                android:textStyle="bold"
                android:textColor="?android:attr/colorBackground" />

            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/img_circular_profile_user"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/userprofilefinal"
                android:layout_centerInParent="true" />

            <TextView
                android:layout_width="176dp"
                android:layout_height="38dp"
                android:text="@string/profile_user_email"
                android:id="@+id/textView"
                android:layout_gravity="right|bottom"
                android:textSize="10dp"
                android:textStyle="bold"
                android:textColor="?android:attr/colorBackground" />

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="23.95"
        >

        <FrameLayout
            android:id="@+id/frame_search"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/ripplesearch"
            android:clickable="true"
            android:visibility="invisible"
            android:layout_weight="0.5"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_search"
                android:id="@+id/tv_search"
                android:layout_gravity="center_horizontal|bottom"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="77dp"
                android:layout_height="64dp"
                android:id="@+id/imageView4"
                android:layout_gravity="center"
                android:src="@drawable/menu_big_search" />

        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:clickable="true"
            android:id="@+id/frame_biblio"
            android:background="@drawable/ripplebibliography">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_bibliography"
                android:id="@+id/textView5"
                android:layout_gravity="center_horizontal|bottom"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="77dp"
                android:layout_height="64dp"
                android:id="@+id/imageView6"
                android:layout_gravity="center"
                android:src="@drawable/menu_big_bibilo" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="23.95" >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_weight="0.5"
            android:background="@drawable/ripplefavorites"
            android:id="@+id/frame_favorites">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_favorites"
                android:id="@+id/textView6"
                android:layout_gravity="center_horizontal|bottom"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="77dp"
                android:layout_height="64dp"
                android:id="@+id/imageView7"
                android:layout_gravity="center"
                android:src="@drawable/menu_big_fav" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:clickable="true"
            android:id="@+id/frame_trivia"
            android:background="@drawable/rippletrivia" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_trivia"
                android:id="@+id/textView7"
                android:layout_gravity="center_horizontal|bottom"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="77dp"
                android:layout_height="64dp"
                android:id="@+id/imageView8"
                android:layout_gravity="center"
                android:src="@drawable/menu_big_trivia" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="23.95" >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:clickable="true"
            android:layout_weight="0.5"
            android:background="@drawable/rippleabout"
            android:id="@+id/frame_about">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_about"
                android:id="@+id/textView9"
                android:layout_gravity="center_horizontal|bottom"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="77dp"
                android:layout_height="64dp"
                android:id="@+id/imageView9"
                android:layout_gravity="center"
                android:src="@drawable/menu_big_about" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:clickable="true"
            android:background="@drawable/ripplesettings"
            android:id="@+id/frame_settings">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/menu_settings"
                android:id="@+id/textView10"
                android:layout_gravity="center_horizontal|bottom"
                android:textColor="#ffffff"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="77dp"
                android:layout_height="64dp"
                android:id="@+id/imageView10"
                android:layout_gravity="center"
                android:src="@drawable/menu_big_settings" />
        </FrameLayout>
    </LinearLayout>



</LinearLayout>